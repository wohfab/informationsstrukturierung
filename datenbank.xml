<cocktailbar>

    <cocktails>
        <cocktail id="negroni" name="Negroni" glass="whiskey">
        <zutaten>
            <zutat id="london-dry-gin" menge="30" />
            <zutat id="vermouth-sweet" menge="30" />
            <zutat id="campari" menge="30" />
